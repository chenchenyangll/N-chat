doctype html
html(lang='en')
  head
    include header
  body
    .container
      .col-md-10.col-md-offset-1.jumbotron.title
        h1= title
        p Welcom to #{title}
      .col-md-6.col-md-offset-3
        form.form-horizontal(role='form')
          .form-group
            label.col-sm-3.control-label(for='inputNick') 昵　称
            .col-sm-9
              input.form-control(type='text', id='inputNick')
          .form-group
            label.col-sm-3.control-label(for='inputPass') 密　码
            .col-sm-9
              input.form-control(type='password', id='inputPass')
          .form-group
            .col-sm-9.col-sm-offset-3
              button.btn.btn-primary.btn-block(type='submit') 登　录
    include footer
  