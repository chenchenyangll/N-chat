extends layout

block content
  .container
    .col-md-10.col-md-offset-1.jumbotron.title
      img(src='/img/nchat.png')
      h1= title
    .col-md-6.col-md-offset-2
      form.form-horizontal(action='/login', method='post', role='form')
        .form-group
          label.col-sm-4.control-label(for='inputNick') Username
          .col-sm-8
            input.form-control(type='text', name='username', id='inputNick')
        .form-group
          label.col-sm-4.control-label(for='inputPass') Password
          .col-sm-8
            input.form-control(type='password', name='password', id='inputPass')
        .form-group
          .col-sm-8.col-sm-offset-4
            button.btn.btn-primary.btn-block(type='submit') Sign in